<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sign_azur"
    tools:context="com.example.kozjava.smartalarm.sign_in.SignInActivity">


    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/sign_primary"
                android:text="Вход"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/sign_in_string"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/edittextstyle"
            android:id="@+id/sign_in_username"
            android:hint="@string/edittext_username"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

            <EditText
                android:inputType="textPassword"
                android:background="@drawable/edittextstyle"
                android:id="@+id/sign_in_password"
                android:hint="@string/edittext_password"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@drawable/edittextstyle"
                android:visibility="visible"
                android:id="@+id/sign_in_phone"
                android:hint="@string/edittext_phone"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <Button
                android:textColor="@color/white"
                android:background="@drawable/buttonstyle"
                android:text="Войти"
                android:id="@+id/sign_in_button"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.romainpiel.shimmer.ShimmerTextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/shimmer_tv"
                android:text="@string/tv_to_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sign_primary" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
