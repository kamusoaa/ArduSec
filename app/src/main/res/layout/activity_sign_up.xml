<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sign_azur"
    tools:context="com.example.kozjava.smartalarm.sign_up.SignUpActivity">


    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/dot_dark_screen2"
                android:text="Регистрация"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/sign_in_string"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@drawable/edittextstyle"
                android:id="@+id/sign_up_username"
                android:hint="@string/edittext_username"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="textPassword"
                android:background="@drawable/edittextstyle"
                android:id="@+id/sign_up_password"
                android:hint="@string/edittext_password"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <EditText
                android:background="@drawable/edittextstyle"
                android:id="@+id/sign_up_phone"
                android:hint="@string/edittext_phone"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="@color/white"
                android:background="@drawable/buttonstyle2"
                android:text="Зарегистрироваться"
                android:id="@+id/sign_up_button"
                android:layout_marginTop="-25dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
